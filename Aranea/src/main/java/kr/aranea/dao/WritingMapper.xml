<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.aranea.dao.WritingDAO">

	<!-- 중고거래 글 작성 -->
	<insert id="write"
	parameterType="kr.aranea.entity.Writing">
		insert into Writing
		values( num_writing.nextval,
				#{id},
				#{img1},
				#{img2},
				#{img3},
				#{title},
				#{category},
				#{address},
				#{condition},
				#{price},
				#{content},
				#{counts}
				)
	</insert>
	
	<!-- 메인페이지에서 판매글 조회 -->
	<select id="main"
	parameterType="kr.aranea.entity.Writing"
	resultType="kr.aranea.entity.Writing">
		select * 
		  from Writing
	</select>
</mapper>